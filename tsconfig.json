{
	"compilerOptions": {
		"module": "esnext",
		"target": "es2022",
		"moduleResolution": "node",
		"strict": true,
		"rootDir": "src",
		"outDir": "lib",
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true
	},
	"include": ["src"],
	"exclude": ["tests"]
}
